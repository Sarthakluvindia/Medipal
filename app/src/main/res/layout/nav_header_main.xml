<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="10"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal"
        android:weightSum="10">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:civ_border_color="#fff"
            app:civ_border_width="3dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="22dp"
                android:paddingLeft="12dp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_bold"
                android:textSize="19dp"
                android:id="@+id/user_name"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fontFamily="@font/roboto_regular"
                android:layout_weight="1"
                android:text="22 Years"
                android:paddingLeft="12dp"
                android:textSize="17dp"
                android:textColor="#a9a9a9"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/blood_color1"
                android:text="Blood"
                android:paddingLeft="12dp"
                android:drawablePadding="7dp"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:textColor="#000000"></TextView>
            <TextView
                android:id="@+id/nav_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="A+"
                android:fontFamily="@font/roboto_bold"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#000000"></TextView>

        </LinearLayout>

        <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Height"
                android:drawableLeft="@drawable/height_color"
                android:drawablePadding="7dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textSize="12dp"
                android:textColor="#000000"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="172 cm"
                android:id="@+id/nav_height"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#000000"></TextView>
        </LinearLayout>

        <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Weight"
                android:drawableLeft="@drawable/weight_color"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textSize="12dp"
                android:textColor="#000000"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fontFamily="@font/roboto_bold"
                android:layout_weight="1"
                android:text="52 kg"
                android:id="@+id/nav_weight"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#000000"></TextView>
        </LinearLayout>

</LinearLayout>



</LinearLayout>
